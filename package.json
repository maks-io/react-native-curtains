{
  "name": "react-native-curtains",
  "version": "1.0.12",
  "description": "Lightweight helper lib for mounting + unmounting of child elements in an animated 'curtain' style",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "keywords": [
    "react native",
    "animation",
    "mount",
    "unmount",
    "columns",
    "react-spring",
    "react-native-reanimated"
  ],
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "clear-build-folder": "rm -rf ./build",
    "transpile": "tsc",
    "fix-paths": "tsc-alias",
    "build": "yarn clear-build-folder && yarn transpile && yarn fix-paths",
    "dev": "yarn nodemon"
  },
  "files": [
    "build"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maks-io/react-native-curtains.git"
  },
  "author": "Markus Kurzmann <markus@kurzmann.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maks-io/react-native-curtains/issues"
  },
  "homepage": "https://github.com/maks-io/react-native-curtains#readme",
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@react-spring/native": "^9.7.3",
    "@types/react": "~18.2.78",
    "expo": "~50.0.15",
    "expo-status-bar": "~1.11.1",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.73.6",
    "react-native-reanimated": "~3.6.2",
    "react-native-web": "~0.19.10",
    "tsc": "^2.0.4",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.4.5"
  }
}
